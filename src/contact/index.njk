---
title: Contact
layout: layout.njk
---

    <!-- En-tête de page contact -->
    <header class="contact-header py-5 text-center text-white">
        <div class="container">
            <h1 class="display-4 fw-bold">Me contacter</h1>
            <p class="lead">N'hésitez pas à me contacter pour discuter de vos projets</p>
        </div>
    </header>

    <!-- Section formulaire de contact -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Coordonnées -->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h3 class="mb-4">Mes coordonnées</h3>
                    <div class="contact-info mb-4">
                        <div class="d-flex mb-3">
                            <div class="contact-icon me-3">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h5>Email</h5>
                                <p class="text-muted">votre.email@exemple.com</p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="contact-icon me-3">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h5>Localisation</h5>
                                <p class="text-muted">Grand Ouest, France</p>
                            </div>
                        </div>
                    </div>

                    <h3 class="mb-4 mt-5">Réseaux sociaux</h3>
                    <div class="social-contact">
                        <a href="#" class="social-btn me-2">
                            <i class="fab fa-linkedin"></i>
                        </a>
                        <a href="#" class="social-btn me-2">
                            <i class="fab fa-github"></i>
                        </a>
                    </div>
                </div>

                <!-- Formulaire -->
                <div class="col-lg-8">
                    <div class="contact-form p-4 p-md-5 bg-light rounded shadow-sm">
                        <h3 class="mb-4">Envoyez-moi un message</h3>
                        <form id="contactForm" action="https://formspree.io/your-email@example.com" method="POST" onsubmit="return validateForm()">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">Nom</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Sujet</label>
                                <input type="text" class="form-control" id="subject" name="subject" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                            </div>
                            
                            <!-- Captcha simple -->
                            <div class="mb-4 captcha-container p-3 bg-white rounded border">
                                <label class="form-label">Vérification humaine</label>
                                <div class="d-flex align-items-center mb-2">
                                    <div class="captcha-question me-3" id="captchaQuestion">
                                        Combien font 3 + 5 ?
                                    </div>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshCaptcha()">
                                        <i class="fas fa-sync-alt"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control" id="captchaAnswer" name="captcha" placeholder="Votre réponse" required>
                                <input type="hidden" id="captchaExpected" value="8">
                                <div class="invalid-feedback" id="captchaError">
                                    La réponse est incorrecte. Veuillez réessayer.
                                </div>
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Envoyer le message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- JavaScript pour le captcha et la validation du formulaire -->
    <script>
        // Fonction pour générer un nouveau captcha
        function refreshCaptcha() {
            // Générer deux nombres aléatoires entre 1 et 10
            const num1 = Math.floor(Math.random() * 10) + 1;
            const num2 = Math.floor(Math.random() * 10) + 1;
            const sum = num1 + num2;
            
            // Mettre à jour la question et la réponse attendue
            document.getElementById('captchaQuestion').innerText = `Combien font ${num1} + ${num2} ?`;
            document.getElementById('captchaExpected').value = sum;
            
            // Réinitialiser le champ de réponse et masquer le message d'erreur
            document.getElementById('captchaAnswer').value = '';
            document.getElementById('captchaError').style.display = 'none';
            document.getElementById('captchaAnswer').classList.remove('is-invalid');
        }
        
        // Validation du formulaire
        function validateForm() {
            const captchaAnswer = document.getElementById('captchaAnswer').value;
            const captchaExpected = document.getElementById('captchaExpected').value;
            
            // Vérifier si la réponse du captcha est correcte
            if (captchaAnswer !== captchaExpected) {
                document.getElementById('captchaAnswer').classList.add('is-invalid');
                document.getElementById('captchaError').style.display = 'block';
                return false;
            }
            
            return true;
        }
        
        // Initialiser un nouveau captcha au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            refreshCaptcha();
        });
    </script>
</body>
</html>